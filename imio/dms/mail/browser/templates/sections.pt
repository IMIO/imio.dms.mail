<tal:sections tal:define="portal_tabs view/portal_tabs"
   tal:condition="portal_tabs"
   i18n:domain="plone">
   <p class="hiddenStructure" i18n:translate="heading_sections">Navigation</p>

   <ul id="portal-globalnav"
      tal:define="selected_tab python:view.selected_portal_tab;
                    isAnon context/@@plone_portal_state/anonymous;">
      <tal:tabs tal:repeat="tab portal_tabs">
         <li tal:define="tid tab/id"
            tal:attributes="id string:portaltab-${tid};
                            class python:selected_tab==tid and 'selected' or 'plain'">
            <a href=""
               tal:content="tab/name"
               tal:attributes="href tab/url;
                               title tab/description|nothing;
                               target tab/link_target|nothing;">
               Tab Name
            </a>
         </li>
      </tal:tabs>

      <li tal:condition="not:isAnon">
         <span class="fa fa-sync-alt" id="collections-count-refresh" alt="Refresh tab count"
            title="Refresh tab count"
            i18n:domain="imio.dms.mail" i18n:attributes="title; alt" />
      </li>

      <!-- TODO tal:condition="available on 'Ã  signer' search" -->
      <li id="read_mode_icon"
          tal:condition="not:isAnon"
          title="Toggle read mode for mails to be signed"
          i18n:domain="imio.dms.mail" i18n:attributes="title"
          onclick="toggle_dms_document_view(this);">
         <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye" viewBox="0 0 16 16">
           <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8M1.173 8a13 13 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5s3.879 1.168 5.168 2.457A13 13 0 0 1 14.828 8q-.086.13-.195.288c-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5s-3.879-1.168-5.168-2.457A13 13 0 0 1 1.172 8z"/>
           <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5M4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0"/>
         </svg>
      </li>
   </ul>
</tal:sections>