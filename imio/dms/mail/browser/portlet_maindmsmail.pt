<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      i18n:domain="imio.dms.mail">
<body>

<div metal:define-macro="portlet">

<metal:block metal:use-macro="here/global_defines/macros/defines" />

<dl class="portlet" id="imiodmsmail-mainportlet"
    tal:define="portal_url context/portal_url">

    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
        <div i18n:translate="Main_menu_title">Main menu</div>
    <span class="portletTopRight"></span>
    </dt>

    <table tal:condition="view/canAddSomething">
        <tr><th i18n:translate="Main_menu_addition_section">Add</th></tr>
        <tr tal:condition="view/canAddIncomingMail"><td>
            <a tal:attributes="href view/getIncomingMailAddUrl">
                <span i18n:translate="Main_menu_add_incoming_mail">incoming mail</span>
                <img tal:attributes="src string:$portal_url/++resource++dmsincomingmail_icon.png" />
            </a>
        </td></tr>
        <tr tal:condition="view/canAddMainFile"><td>
            <a tal:attributes="href view/getMainFileAddUrl">
                <span i18n:translate="Main_menu_add_main_file">main file</span>
                <img tal:attributes="src string:$portal_url/++resource++dmsmainfile_icon.png" />
            </a>
        </td></tr>
        <tr><th i18n:translate="Main_menu_filter_section">Filter</th></tr>
        <tr tal:condition="view/canFilterManagersMails">
          <td>
            <a tal:attributes="href view/getManagersMails">
                <span i18n:translate="Main_menu_filter_mail_proposed_to_manager">mail proposed to manager</span>
            </a>
          </td>
        </tr>
    </table>

    <dd class="portletFooter">
    </dd>

</dl>

</div>
</body>
</html>
